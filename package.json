{
  "name": "text-work",
  "displayName": "Text Work",
  "description": "Custom highlighting and productivity tools for .txt files",
  "version": "0.0.11",
  "icon": "imgs/icon.png",
  "publisher": "ozinka",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Themes",
    "Other"
  ],
  "main": "./src/extension.js",
  "activationEvents": [
    "onLanguage:text-work"
  ],
  "contributes": {
    "languages": [
      {
        "id": "text-work",
        "aliases": [
          "text-work"
        ],
        "extensions": [
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "text-work",
        "scopeName": "source.text-work",
        "path": "./syntaxes/text-work.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "textWork.insertDateTimeLineAfter",
        "title": "Insert Date Time Line After"
      },
      {
        "command": "textWork.insertDateTimeLineBefore",
        "title": "Insert Date Time Line Before"
      },
      {
        "command": "textWork.onEnter",
        "title": "On Enter"
      },
      {
        "command": "textWork.onTab",
        "title": "On Tab"
      },
      {
        "command": "textWork.onShiftTab",
        "title": "On Shift Tab"
      }
    ],
    "keybindings": [
      {
        "command": "textWork.insertDateTimeLineAfter",
        "key": "alt+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "textWork.insertDateTimeLineBefore",
        "key": "shift+alt+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "textWork.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == text-work"
      },
      {
        "command": "textWork.onTab",
        "key": "tab",
        "when": "editorTextFocus && editorLangId == text-work && !suggestWidgetVisible && !inSnippetMode && !inlineSuggestionVisible"
      },
      {
        "command": "textWork.onShiftTab",
        "key": "shift+tab",
        "when": "editorTextFocus && editorLangId == text-work && !suggestWidgetVisible && !inSnippetMode"
      }
    ],
    "configurationDefaults": {
      "[text-work]": {
        "editor.quickSuggestions": false,
        "editor.suggestOnTriggerCharacters": false,
        "editor.parameterHints.enabled": false,
        "editor.wordBasedSuggestions": "off",
        "editor.fontFamily": "PasswordMask, monospace",
        "editor.fontLigatures": false
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "annotation:dart": {
            "foreground": "#d19a66"
          },
          "enumMember": {
            "foreground": "#56b6c2"
          },
          "macro": {
            "foreground": "#d19a66"
          },
          "memberOperatorOverload": {
            "foreground": "#c678dd"
          },
          "parameter.label:dart": {
            "foreground": "#abb2bf"
          },
          "property:dart": {
            "foreground": "#d19a66"
          },
          "tomlArrayKey": {
            "foreground": "#e5c07b"
          },
          "variable:dart": {
            "foreground": "#d19a66"
          },
          "variable.constant": {
            "foreground": "#d19a66"
          },
          "variable.defaultLibrary": {
            "foreground": "#e5c07b"
          }
        }
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "source.text-work",
            "settings": {
              "foreground": "#e0e0e0"
            }
          },
          {
            "name": "[text-work] Comments",
            "scope": "comment-gray",
            "settings": {
              "foreground": "#7a7a7a",
              "fontStyle": "italic"
            }
          },
          {
            "name": "[text-work] Strings",
            "scope": "string-orange",
            "settings": {
              "foreground": "#b7cfa0"
            }
          },
          {
            "name": "[text-work] Links and Emails",
            "scope": "link-blue",
            "settings": {
              "foreground": "#61afef",
              "fontStyle": "underline"
            }
          },
          {
            "name": "[text-work] Numbers",
            "scope": "number-cyan",
            "settings": {
              "foreground": "#8f87fd"
            }
          },
          {
            "name": "[text-work] Success/True",
            "scope": "green",
            "settings": {
              "foreground": "#6fbf6f"
            }
          },
          {
            "name": "[text-work] Error/False",
            "scope": "red",
            "settings": {
              "foreground": "#d96b6b"
            }
          },
          {
            "name": "[text-work] Commands/Keywords",
            "scope": "magenta",
            "settings": {
              "foreground": "#e498fb"
            }
          },
          {
            "name": "[text-work] Abbreviations",
            "scope": "abbreviation-purple",
            "settings": {
              "foreground": "#c568ff"
            }
          },
          {
            "name": "[text-work] Bullets",
            "scope": "blue",
            "settings": {
              "foreground": "#8488ff"
            }
          },
          {
            "name": "[text-work] Tags",
            "scope": "yellow",
            "settings": {
              "foreground": "#e0c86b"
            }
          },
          {
            "name": "[text-work] Punctuation",
            "scope": "gray",
            "settings": {
              "foreground": "#d7a984"
            }
          },
          {
            "name": "[text-work] Password",
            "scope": "password-red",
            "settings": {
              "foreground": "#ff5555",
              "fontStyle": "bold"
            }
          },
          {
            "name": "[text-work] UUID",
            "scope": "uuid-cyan",
            "settings": {
              "foreground": "#a4f5f8"
            }
          },
          {
            "name": "[text-work] Labels",
            "scope": "label-brown",
            "settings": {
              "foreground": "#fcc084"
            }
          },
          {
            "name": "[text-work] Color Word - Violet",
            "scope": "violet",
            "settings": {
              "foreground": "#de92f9"
            }
          }
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ozinka/text-work.git"
  }
}