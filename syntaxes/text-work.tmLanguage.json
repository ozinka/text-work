{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "text-work",
  "scopeName": "source.text-work",
  "patterns": [
    {
      "include": "#colors"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#passwordPattern"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#uuid"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#emails"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#statuses"
    },
    {
      "include": "#abbreviations"
    },
    {
      "include": "#tags"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#bullets"
    },
    {
      "include": "#entity"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment-gray",
          "match": "//.*$"
        },
        {
          "name": "comment-gray",
          "match": "--.*$"
        }
      ]
    },
    "uuid": {
      "patterns": [
        {
          "name": "uuid-cyan",
          "match": "\\b[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}\\b"
        }
      ]
    },
    "emails": {
      "patterns": [
        {
          "name": "link-blue",
          "match": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9-]+(?:\\.[A-Za-z0-9-]+)*\\.[A-Za-z]{2,}\\b"
        },
        {
          "name": "link-blue",
          "match": "\\bhttps?://[\\w\\-\\.]+(?:/[\\w\\-./?%&=]*)?\\b"
        }
      ]
    },
    "passwordPattern": {
      "patterns": [
        {
          "name": "password-red",
          "match": "\\S+(?=\\s+@pass\\b)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string-orange",
          "begin": "\"",
          "end": "\"|(?=^--- ✄)",
          "patterns": [
            {
              "include": "#emails"
            },
            {
              "name": "string-orange",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string-orange",
          "begin": "(?<!\\w)'(?!\\w)|(?<!\\w)'(?=\\s)",
          "end": "'(?!\\w)|(?=^--- ✄)",
          "patterns": [
            {
              "include": "#emails"
            },
            {
              "name": "string-orange",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "(\\$|€)?\\b([0-9]+(\\.[0-9]+)?)(k)?\\b",
          "captures": {
            "2": {
              "name": "number-cyan"
            }
          }
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "green",
          "match": "(?i)\\b(true|ok|good|done|passed|eligible|yes|green|prod|production)\\b"
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "name": "violet",
          "match": "(?i)\\b(violet|purple|monday|mon|tuesday|tue|wednesday|wed|thursday|thu|friday|fri|saturday|sunday)\\b"
        },
        {
          "name": "red",
          "match": "(?i)\\b(red|sun|sat)\\b"
        },
        {
          "name": "red",
          "match": "(?i)\\b(false|fail|failed|error|no|not\\s+eligible)\\b"
        },
        {
          "name": "blue",
          "match": "(?i)\\b(blue|Febroray|feb|March|mar|April|apr|May|may|June|jun|July|jul|August|aug|September|sep|October|oct|November|nov|December|dec)\\b"
        },
        {
          "name": "magenta",
          "match": "(?i)\\b(status|cp|mv|tf|npm|npx|python\\d*|terraform|echo|git|ssh)\\b"
        },
        {
          "name": "magenta",
          "match": "(?i)\\b(if|else|run|install|pull|push)\\b"
        },
        {
          "name": "string-orange",
          "match": "[\\!\\$\\€\\?]"
        }
      ]
    },
    "abbreviations": {
      "patterns": [
        {
          "name": "abbreviation-purple",
          "match": "\\b([A-Z\\d]{2,}|[\\w.]*_[\\w.]*)\\b"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "yellow",
          "match": "\\s@[A-Za-z0-9_\\-]+"
        },
        {
          "name": "yellow",
          "match": "(?i)\\b(dev)\\b"
        },
        {
          "name": "yellow",
          "match": "\\bis[A-Z][a-zA-Z]*\\b"
        },
        {
          "name": "yellow",
          "match": "(?i)\\b(yellow)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "gray",
          "match": "[-=\\|,.:;(){}\\[\\]\"']"
        }
      ]
    },
    "bullets": {
      "patterns": [
        {
          "match": "^(\\s*)([\\*\\-•▪▫◦‣⁃]\\s|\\d+\\.\\s|[a-zA-Z]\\.\\s|[ivxlcdmIVXLCDM]+\\.\\s|\\.\\s)",
          "captures": {
            "2": {
              "name": "blue"
            }
          }
        }
      ]
    },
    "entity": {
      "patterns": [
        {
          "name": "label-brown",
          "match": "^\\s*[^:\\s][^:]*(?=:)"
        },
        {
          "name": "label-brown",
          "match": "(?i)\\b(warning)\\b"
        }
      ]
    }
  }
}